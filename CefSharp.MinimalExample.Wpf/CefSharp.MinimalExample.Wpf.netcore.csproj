<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>netcoreapp3.0</TargetFramework>
    <UseWPF>true</UseWPF>
    <RootNamespace>CefSharp.MinimalExample.Wpf</RootNamespace>
    <ApplicationIcon>chromium-256.ico</ApplicationIcon>
    <ApplicationManifest>app.manifest</ApplicationManifest>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <Platforms>x86;x64</Platforms>
    <StartupObject>CefSharp.MinimalExample.Wpf.Program</StartupObject>
  </PropertyGroup>

  <ItemGroup Condition="'$(PlatformTarget)' == 'x64'">
    <PackageReference Include="System.Windows.Interactivity.WPF" Version="2.0.20525" />
    <PackageReference Include="CefSharp.Wpf.win-x64" Version="79.1.360-CI3420" />
  </ItemGroup>
  <ItemGroup Condition="'$(PlatformTarget)' == 'x86'">
    <PackageReference Include="System.Windows.Interactivity.WPF" Version="2.0.20525" />
    <PackageReference Include="CefSharp.Wpf.win-x86" Version="79.1.360-CI3420" />
  </ItemGroup>
  <ItemGroup>
    <Compile Remove="Program.cs" />
  </ItemGroup>
  <ItemGroup>
    <None Remove="crash_reporter.cfg" />
    <None Remove="packages.config" />
  </ItemGroup>
  <ItemGroup>
    <None Update="crash_reporter.netcore.cfg">
      <Link>crash_reporter.cfg</Link>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>
</Project>