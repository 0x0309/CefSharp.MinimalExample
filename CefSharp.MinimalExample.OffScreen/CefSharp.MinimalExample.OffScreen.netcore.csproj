<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp3.0</TargetFramework>
    <UseWindowsForms>true</UseWindowsForms>
    <RootNamespace>CefSharp.MinimalExample.OffScreen</RootNamespace>
    <ApplicationManifest>app.manifest</ApplicationManifest>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <Platforms>x86;x64</Platforms>
    <StartupObject>CefSharp.MinimalExample.OffScreen.Program</StartupObject>
  </PropertyGroup>

  <ItemGroup Condition="'$(PlatformTarget)' == 'x64'">
    <PackageReference Include="CefSharp.OffScreen.win-x64" Version="79.1.360-CI3438" />
  </ItemGroup>
  <ItemGroup Condition="'$(PlatformTarget)' == 'x86'">
    <PackageReference Include="CefSharp.OffScreen.win-x86" Version="79.1.360-CI3438" />
  </ItemGroup>
  <ItemGroup>
    <Compile Remove="Program.cs" />
  </ItemGroup>
  <ItemGroup>
    <None Remove="crash_reporter.cfg" />
    <None Remove="packages.config" />
  </ItemGroup>
  <ItemGroup>
    <None Update="crash_reporter.netcore.cfg">
      <Link>crash_reporter.cfg</Link>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>
</Project>
